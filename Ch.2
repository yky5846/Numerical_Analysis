// #5

a=2;
b=5;
x=0:pi/40:pi/2;

y = b*exp(-a*x).*sin(b*x).*(0.012*x.^4-0.15*x.^3*0.075*x.^2+2.5*x);
// 여기서 .은 성분별로 곱하기 위함.

z = y.^2;
format short g // 포맷 지정
w=[x;y;z]; // x y z 열 순으로 w를 표현

help legend // legend 함수에 대한 설명

plot(x,y,'rp--','LineWidth',1.5,'MarkerSize',14,'MarkerEdgeColor','r',MarkerFaceColor',w')
hold on // 위 플롯을 유지하는 함수
plot(x,z,'b-s','MarkerEdgeColor','b','MarkerFaceColor,'g')
xlabel('x')
ylabel('y,z')
legend('y','z') // 범례 표시


